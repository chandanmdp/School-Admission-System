<%= error_messages_for(f.object) %>
<table class="table">
  <tr>
    <th>Name</th>
    <td><%=f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Add passport size photo</th>
    <td><%=f.file_field :image %></td>
  </tr>
  <tr>
    <th>Father's name</th>
    <td><%=f.text_field(:father_name) %></td>
  </tr>
  <tr>
    <th>Mother's Name</th>
    <td><%=f.text_field(:mother_name) %></td>
  </tr>
  <tr>
    <th>Education</th>
    <td>
    <% if @section.section_name == "Kindergarten Section" %>
      <%=f.select(:education, ['Not Applicable']) %>
    <% elsif @section.section_name == "Junior Section (Grades 1 to 4)" %>
      <%=f.select(:education, ['Kindergarten', '1st', '2nd', '3rd']) %>
    <% else %>
      <%=f.select(:education, ['4th', '5th','6th','7th','8th','9th','10th','11th']) %>
    <% end %>
    </td>
  </tr>
  <tr>
    <% unless @section.section_name == "Kindergarten Section" %>
      <th>Marksheet</th>
      <td><%=f.file_field :marksheet %></td>
    <% end %>
  </tr>
  <tr>
    <th>Contact Address</th>
    <td><%=f.text_area :contact_address, size: "40x3" %></td>
  </tr>
  <tr>
    <th>Parent Contact Number</th>
    <td><%=f.telephone_field(:parent_contact_number) %></td>
  </tr>
  <tr>
    <th>Alternate Parent Contact Number</th>
    <td><%=f.telephone_field(:alternate_parent_contact_number) %></td>
  </tr>
</table>
