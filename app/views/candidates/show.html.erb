<div class="container">
  <% if @candidate.present? %>
    <h2 class="text-center bg-info">Candidate Details</h2>
    <br>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 gray-border padding-bottom">
        <table class="table text-center">
          <tr>
            <th>Candidate's Photo</th>
            <td><%= image_tag @candidate.image.url(:thumb), class: "passport-size" %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= @candidate.name %></td>
          </tr>
          <tr>
            <th>Father's Name</th>
            <td><%= @candidate.father_name %></td>
          </tr>
          <tr>
            <th>Mother's Name</th>
            <td><%= @candidate.mother_name %></td>
          </tr>
          <% unless @candidate.education == "Not Applicable" %>
            <tr>
              <th>Education</th>
              <td><%= @candidate.education %></td>
            </tr>
          <% end %>
          <tr>
            <th>Contact Address</th>
            <td><%= @candidate.contact_address %></td>
          </tr>
          <tr>
            <th>Parent's Contact Number</th>
            <td><%= @candidate.parent_contact_number %></td>
          </tr>
          <% if @candidate.alternate_parent_contact_number %>
            <tr>
              <th>Parent's Alternate Contact Number</th>
              <td><%= @candidate.alternate_parent_contact_number %></td>
            </tr>
          <% end %>
          <tr class="text-info">
            <th>Admission status</th>
            <td><%= @candidate.admission_status %></td>
          </tr>
          <% if @candidate.admission_status == "Selected" %>
            <tr class="text-info">
              <th>Admission in grade</th>
              <td><%= @candidate.grade %></td>
            </tr>
          <% end %>
          <% if @candidate.admission_status == "Application Rejected" || @candidate.admission_status == "Appointment Rejected" %>
            <tr class="text-info">
              <th>Rejection reason</th>
              <td><%= @candidate.rejection_reason %></td>
            </tr>
          <% end %>
        </table>
        <div class="text-right">
          <%= link_to "Edit candidate", edit_section_candidate_path(@candidate.section,@candidate),class:"btn btn-info text-left" %>
          <% if current_user.admin? %>
            <% if @candidate.admission_status == "Under Process" || @candidate.admission_status == "Appointment Pending" %>
              <%= link_to "Manage candidate", manage_section_candidate_path(@candidate.section,@candidate),class:"btn btn-info text-right" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
