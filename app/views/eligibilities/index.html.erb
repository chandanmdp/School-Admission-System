<div class="container">
  <%= link_to("<<Back to menu page", access_menu_path) %>
  <h2 class="text-center bg-primary">Eligibility Criteria For Admission</h2>
  <% if @eligibilities.size %>
    <% @eligibilities.each do |eligibility| %>
      <table class="table">
        <tr>
          <th class="text-center" colspan="2"><%= eligibility.title %></td>
        </tr>
        <tr>
          <td class="text-center col-sm-10"><%= eligibility.criteria %></td>
          <% if logged_in? %>
            <% if current_user.admin? %>
              <td class="text-center col-sm-2">
                <%= link_to("Edit", edit_eligibility_path(eligibility), class:'btn btn-info btn-xs') %>
                <%= link_to 'Destroy', eligibility_path(eligibility), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-info btn-xs' %>
              </td>
            <% end %>
          <% end %>
        </tr>
      </table>
    <% end %>
  <% end %>
  <% if logged_in? %>
    <% if current_user.admin? %>
      <%= link_to("Add New Eligibility Criteria", new_eligibility_path, class:'btn btn-primary') %>
    <% end %>
  <% end %>
</div>
