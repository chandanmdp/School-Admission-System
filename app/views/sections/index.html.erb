<div class="container">
  <h2 class="text-center bg-primary">Sections</h2>
  <table class="table">
    <tr>
      <th>Section Name</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
    <tr>
      <td class="center"><%= section.section_name %></td>
      <td>
        <%= link_to("Show", section_path(section), class:'btn btn-info btn-xs')%>
        <%= link_to("Edit", edit_section_path(section), class:'btn btn-info btn-xs')%>
        <%= link_to 'Destroy', section_path(section), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-info btn-xs' %>
      </td>
    </tr>
    <% end %>
  </table>
  <%= link_to("Add New Section", new_section_path, class:'btn btn-primary') %>
</div>
