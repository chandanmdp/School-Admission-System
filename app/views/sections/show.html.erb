<div class="container">
  <%= link_to("<< Back to Section List", sections_path, class:'btn btn-primary') %>
  <h2 class="text-center bg-info"><%= @section.section_name %></h2>
  <br>
  <% if @section.candidates.size > 0 %>
    <h3>Candidates</h3>
    <table class="table">
      <tr>
        <th>Candidate Name</th>
        <th>Father's Name</th>
        <th>Actions</th>
      </tr>
      <% @section.candidates.each do |candidate| %>
        <tr>
          <td><%= candidate.name %></td>
          <td><%= candidate.father_name %></td>
          <td>
            <%= link_to("Show", section_candidate_path(@section.id,candidate), class:'btn btn-info btn-xs')%>
            <%= link_to("Edit", edit_section_candidate_path(@section.id,candidate), class:'btn btn-info btn-xs')%>
            <%= link_to 'Destroy', [candidate.section, candidate], method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-info btn-xs' %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
  <%= link_to 'Add New Candidate', new_section_candidate_path(@section), class:'btn btn-primary' %>
  <%= link_to "Show Candidates' Admission Status", status_section_path, class:'btn btn-primary pull-right' %>
</div>
